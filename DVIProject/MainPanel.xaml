<Window x:Class="DVI.MainPanel"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DVI"
        mc:Ignorable="d"
        Title="MainPanel" Height="720" Width="1280">
    <Window.Resources>
        <XmlDataProvider 
            x:Key="DataRss" Source="https://nordjyske.dk/rss/nyheder">
        </XmlDataProvider>
    </Window.Resources>

    <Grid>
        <ListBox ItemsSource="{Binding XPath=//item, Source={StaticResource DataRss}}">
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <StackPanel Orientation="Horizontal">
                        <TextBlock   Text="{Binding XPath=title}" FontWeight="Bold" FontSize="20">
                        </TextBlock>
                    </StackPanel>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>
    </Grid>

</Window>
