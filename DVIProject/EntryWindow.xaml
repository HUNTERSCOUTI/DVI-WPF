<Window x:Class="DVI.EntryWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DVI"
        mc:Ignorable="d"
        Title="EntryWindow" Height="720" Width="1280"
        FontFamily="Cascadia Mono SemiBold" Background="#272537"
        Foreground="White">

    <Grid>
        <TextBlock Text="Home" FontSize="48" Margin="0,0,0,350"
                   HorizontalAlignment="Center" VerticalAlignment="Center"/>

        <Button x:Name="mainBtn" Content="Main" 
                Margin="0,0,0,100" Click="mainBtn_Click"
                HorizontalAlignment="Center" VerticalAlignment="Center"
                Width="250" Height="30"/>
    </Grid>

</Window>
